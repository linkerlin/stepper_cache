{
    "name": "halomaster/stepper_cache",
    "description": "Browser-side caching plugin for Flarum using Service Worker",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "autoload": {
        "psr-4": {
            "Stepper\\Cache\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Stepper Cache",
            "icon": {
                "name": "fas fa-bolt",
                "backgroundColor": "#238c59",
                "color": "#fff"
            }
        }
    }
}